<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="com.bluepixel.android.sgpool.ui.parse.ParseDevActivity$PlaceholderFragment">


    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="Installation"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              style="@android:style/TextAppearance.DeviceDefault.Large"
              android:background="#ff556cb1"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Install"
            android:id="@+id/createInstall"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Install"
            android:id="@+id/getInstall"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="Subscribe and Unsubscribe"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              style="@android:style/TextAppearance.DeviceDefault.Large"
              android:background="#ff5cb19f"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:id="@+id/btnSubscribe"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsubscribe"
            android:id="@+id/btnUnsubscribe"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push"
            android:id="@+id/btnPush"/>
    </LinearLayout>

</LinearLayout>
